{{ form_start(form, {attr: {"noValidate": true, class: "col-span-full"}}) }}

<div class="p-4 mb-4 bg-white border border-gray-200 rounded-lg shadow-sm 2xl:col-span-2 dark:border-gray-700 sm:p-6 dark:bg-gray-800">
    <h3 class="mb-4 text-xl font-semibold dark:text-white">Informations générales</h3>
    <div class="grid grid-cols-6 gap-6">
        <div class="col-span-full">
            {{ form_row(form.title) }}
        </div>
        <div class="col-span-full">
            {{ form_row(form.description) }}
        </div>
        <div class="col-span-6 sm:col-span-3">
            {{ form_row(form.length) }}
        </div>
        <div class="col-span-6 sm:col-span-3">
            {{ form_row(form.difficulty) }}
        </div>
        <div class="col-span-full">
            {{ form_row(form.categories) }}
        </div>
    </div>

</div>
<div class="p-4 mb-4 bg-white border border-gray-200 rounded-lg shadow-sm 2xl:col-span-2 dark:border-gray-700 sm:p-6 dark:bg-gray-800">
    <h3 class="mb-4 text-xl font-semibold dark:text-white">Chapitres (Blocs de compétences)</h3>
    {{ form_row(form.trainingBlocks) }}
</div>
<div class="p-4 mb-4 bg-white border border-gray-200 rounded-lg shadow-sm 2xl:col-span-2 dark:border-gray-700 sm:p-6 dark:bg-gray-800">
    <h3 class="mb-4 text-xl font-semibold dark:text-white">Objectifs</h3>
    {{ form_row(form.trainingObjectives) }}

</div>
<div class="col-span-full">
    <button class="text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
            type="submit">{{ button_label|default('Enregistrer') }}</button>
</div>
{{ form_end(form) }}


