{% block body %}
    {{ form_start(form, { 'attr' : { 'novalidate' : true }}) }}

    {{ form_rest(form) }}

        <div class="col-span-full">
            <button class="text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" type="submit">{{ button_label|default('Enregistrer') }}</button>
