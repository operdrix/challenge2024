{% extends 'base.html.twig' %}

{% block body %}
    <div {{ stimulus_controller("chat") }} class="bg-white">
        <h2 {{ stimulus_target("chat", "header") }} class="text-center p-4 flex justify-center items-center bg-white text-lg dark:text-white dark:bg-gray-700">
            Conversation avec
            {% if conversation.student is same as app.user %}
                {{ conversation.teacher.firstname }} {{ conversation.teacher.lastname }}
            {% else %}
                {{ conversation.student.firstname }} {{ conversation.student.lastname }}
            {% endif %}
        </h2>

        <div {{ stimulus_target("chat", "defaultContainer") }} id="messages" class="flex flex-col items-start overflow-y-scroll" {{ turbo_stream_listen('conversation' ~ conversation.id) }}>
            {% for message in conversation.messages %}
                {{ include("chat/message.stream.html.twig", {message: message}) }}
            {% endfor %}
        </div>

        <turbo-frame id="message_form" class="flex flex-col items-start" {{ stimulus_target("chat", "formContainer") }}>
            {{ form_start(form, {"attr": {"class": "w-[100%]"}}) }}
            <div class="flex items-center px-3 py-2 rounded-lg bg-gray-50 dark:bg-gray-700">
                {{ form_row(form.content) }}
                <button type="submit" class="inline-flex justify-center items-center p-2 text-blue-600 rounded-full cursor-pointer hover:bg-blue-100 dark:text-blue-500 dark:hover:bg-gray-600">
                    <svg class="w-5 h-5 rotate-90 rtl:-rotate-90" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 20">
                        <path d="m17.914 18.594-8-18a1 1 0 0 0-1.828 0l-8 18a1 1 0 0 0 1.157 1.376L8 18.281V9a1 1 0 0 1 2 0v9.281l6.758 1.689a1 1 0 0 0 1.156-1.376Z"/>
                    </svg>
                    <span class="sr-only">Envoyer</span>
                </button>
            </div>
            {{ form_end(form) }}
        </turbo-frame>
    </div>
{% endblock %}