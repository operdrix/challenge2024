<turbo-stream action="append" target="messages">
    <template>
        {% if message.id is not same as null %}
            <div class="flex items-start gap-2.5 ">
                <img class="w-8 h-8 rounded-full" src="https://flowbite.com/docs/images/people/profile-picture-5.jpg" alt="Jese image">
                <div class="flex flex-col w-full leading-1.5 p-4 border-gray-200 bg-gray-100 rounded-e-xl rounded-es-xl dark:bg-gray-700">
                    <div class="flex items-center space-x-2 rtl:space-x-reverse">
                        <span class="text-sm font-semibold text-gray-900 dark:text-white">
                            {% if message.createdBy is same as message.conversation.teacher.email %}
                                {{ message.conversation.teacher.fullname }}
                            {% else %}
                                {{ message.conversation.student.fullname }}
                            {% endif %}
                        </span>
                    </div>
                    <p class="text-sm font-normal py-2.5 text-gray-900 dark:text-white">{{ message.content }}</p>
                    <span class="text-sm font-normal text-gray-500 dark:text-gray-400">Envoy√©</span>
                </div>
            </div>
        {% endif %}
    </template>
</turbo-stream>