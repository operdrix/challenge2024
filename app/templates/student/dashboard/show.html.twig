                <li class="me-2" role="presentation">
                    <button class="inline-block p-4 border-b-2 rounded-t-lg" id="objectives-styled-tab" data-tabs-target="#styled-objectives" type="button" role="tab" aria-controls="objectives" aria-selected="false">Objectifs/Catégories</button>
                </li>
                <li class="me-2" role="presentation">
                    <button class="inline-block p-4 border-b-2 rounded-t-lg hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300" id="block-styled-tab" data-tabs-target="#styled-block" type="button" role="tab" aria-controls="block" aria-selected="false">Blocs</button>
                </li>
                <li role="presentation">
                    <button class="inline-block p-4 border-b-2 rounded-t-lg hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300" id="resources-styled-tab" data-tabs-target="#styled-resources" type="button" role="tab" aria-controls="resources" aria-selected="false">Ressources</button>
                </li>
            </ul>
        </div>
        
        <div id="default-styled-tab-content" class="bg-white">
            <div class="hidden p-4 rounded-lg bg-gray-50 dark:bg-gray-800" id="styled-objectives" role="tabpanel" aria-labelledby="objectives-tab">

                <h1 class="text-xl font-semibold text-gray-900 sm:text-2xl dark:text-white my-4">Objectifs</h1>
                <ol class="space-y-4 w-72">
                    {% for objective in training.getTrainingObjectives %}  
