{% extends "base.html.twig" %}

{% block bodyNotLogin %}
    <div class="px-4 pt-6">
        <a href="https://flowbite-admin-dashboard.vercel.app/"
           class="flex items-center justify-center mb-8 text-2xl font-semibold lg:mb-10 dark:text-white">
            <img src="{{ asset("Edumentor.png") }}" class="mr-4 h-11"
                 alt="EduMentor Logo">
        </a>
        <!-- Card -->
        <div class="p-6 space-y-8 sm:p-8 bg-white rounded-lg shadow dark:bg-gray-800">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
                Choisir son mot de passe
            </h2>

            <div>
                <h3 class="mb-2 text-md font-semibold text-gray-900 dark:text-white">
                    Votre mot de passe doit répondre aux exigences de sécurité suviantes:
                </h3>
                <ul class="max-w-md space-y-1 text-gray-500 list-disc list-inside dark:text-gray-400">
                    <li>8 caractères minimum</li>
                    <li>255 caractères maximum</li>
                    <li>Une lettre majuscule</li>
                    <li>Un chiffre</li>
                    <li>Un symbole</li>
                </ul>
            </div>

            {{ form_start(form, {'attr': {'novalidate' : 'novalidate'}}) }}
                {{ form_widget(form) }}
                <button type="submit" class="w-full px-5 py-3 text-base font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 sm:w-auto dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">Valider</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}