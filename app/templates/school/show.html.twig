{% block title %}School{% endblock %}

{% block body %}
    <h1>School</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ school.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ school.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ school.address }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ school.email }}</td>
            </tr>
            <tr>
                <th>ContactName</th>
                <td>{{ school.contactName }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
